{
	"manifest_version": 2,
	"name": "Test Extension",
	"version": "1.0.0",
	"permissions": [ "tabs", "activeTab" ],
	"content_scripts": [
		{
			"matches": [
				"http://*/",
				"https://*/"
			],
			"js": [ "content-script.js" ]
		}
	],
	"background": {
		"page": "index.html#/event",
		"persistent": false
	},
	"browser_action": {
		"default_title": "Open Popup!",
		"default_popup": "index.html#/popup"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
